<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundPrimary">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stateListAnimator="@null">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:visibility="visible">

            <TextView
                android:id="@+id/textViewToolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/colorTextPrimary"
                android:textSize="16sp"
                tools:text="12"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <com.zhihu.matisse.viewpager.MatisseSwipeControlViewpager
        android:id="@+id/viewPagerImageCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/linearBottomButtons"
        android:layout_below="@id/appBarLayout"/>


    <RelativeLayout
        android:id="@+id/linearBottomButtons"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_crop_bottom_button_height"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/linearBottomButtonEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/CropButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/image_crop_button_edit"
                android:textColor="@color/colorTextPrimary" />
        </LinearLayout>


        <ImageView
            android:id="@+id/imageViewBottomEditDivider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorLinePrimary" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeProgressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressBarLoading"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

    </RelativeLayout>

</RelativeLayout>